                        android:textColor="@color/main_background"
                        android:textSize="@dimen/header_size" />

                    <com.stexgroup.novinki.customviews.TextViewMainTheme
                        android:id="@+id/TextViewMainTheme10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7800 руб."
                        android:textColor="@color/main_background"
                        android:textSize="@dimen/header_size" />
                </TableRow>
            </TableLayout>

            <com.stexgroup.novinki.customviews.TextViewMainTheme
                android:id="@+id/TextViewMainTheme01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/price_hotel_nomer_text"
                android:textColor="@color/grey_font"
                android:textSize="@dimen/header_size"
                android:visibility="gone" />

            <com.stexgroup.novinki.customviews.TextViewMainTheme
                android:id="@+id/TextViewMainTheme12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="САУНА"
                android:textColor="@color/grey_font"
                android:textSize="@dimen/header_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <com.stexgroup.novinki.customviews.TextViewMainTheme
                    android:id="@+id/TextViewMainTheme15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="БУДНИЕ ДНИ"
                    android:textColor="@color/grey_font"
                    android:textSize="@dimen/header_size" />

                <com.stexgroup.novinki.customviews.TextViewMainTheme
                    android:id="@+id/TextViewMainTheme16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
